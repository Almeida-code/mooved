<%= stylesheet_link_tag 'signup', media: 'all', 'data-turbo-track': 'reload' %>

<div class="signup-container">
  <div class="signup-card">
    <h2>Create Your Mooved Account</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name,
                    required: true,
                    autofocus: true,
                    input_html: { class: "input-field", autocomplete: "given-name" } %>

        <%= f.input :last_name,
                    required: true,
                    input_html: { class: "input-field", autocomplete: "family-name" } %>

        <%= f.input :role,
                    as: :select,
                    collection: [['Customer', 'customer'], ['Company', 'company']],
                    prompt: 'Select Role',
                    required: true,
                    input_html: { class: "input-field" } %>

        <%= f.input :email,
                    required: true,
                    input_html: { class: "input-field", autocomplete: "email" } %>

        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { class: "input-field", autocomplete: "new-password" } %>

        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { class: "input-field", autocomplete: "new-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "signup-button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
