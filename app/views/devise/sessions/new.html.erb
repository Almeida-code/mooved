<%= stylesheet_link_tag 'login', media: 'all', 'data-turbo-track': 'reload' %>

<div class="login-container">
  <div class="login-card">
    <h2>Log in to Mooved</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "input-field" } %>

        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "input-field" } %>

        <%= f.input :remember_me, as: :boolean, label: "Remember Me", class: "remember-me" if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit,"Log in", class: "login-button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
