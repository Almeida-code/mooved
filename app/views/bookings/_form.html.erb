<%= form_with(model: @booking, url: truck_bookings_path(truck_id: truck.id), data: { turbo: false }, method: :post, local: true, class: "booking-form") do |f| %>
  <%= f.hidden_field :truck_id, value: truck.id %>

  <div class="form-group">
    <%= f.label :start_date, "Start Date", class: "form-label" %>
    <%= f.date_field :start_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :end_date, "End Date", class: "form-label" %>
    <%= f.date_field :end_date, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Book Now", class: "btn btn-book" %>
  </div>
<% end %>
