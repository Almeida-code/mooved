<%= stylesheet_link_tag 'bookings/edit', media: 'all', 'data-turbo-track': 'reload' %>

<div class="form-container">
  <h1 class="form-heading">Edit Your Booking</h1>

  <%= form_with(model: @booking, url: booking_path(@booking), method: :patch) do |f| %>
    <div class="form-group">
      <%= f.label :start_date %>
      <%= f.date_field :start_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :end_date %>
      <%= f.date_field :end_date, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Update Booking", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
