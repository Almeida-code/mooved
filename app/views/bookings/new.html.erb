<%= stylesheet_link_tag 'bookings', media: 'all', 'data-turbo-track': 'reload' %>

<div class="form-container">
  <h1 class="form-heading">Make a New Booking ðŸšš</h1>

  <%= form_with(model: @booking, url: truck_bookings_path(@truck), class: "booking-form") do |f| %>
    <div class="form-group">
      <%= f.label :truck_id, "Choose a Truck", class: "form-label" %>
      <%= f.collection_select :truck_id, @trucks, :id, :title, prompt: "Select a truck", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :start_date, class: "form-label" %>
      <%= f.date_field :start_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :end_date, class: "form-label" %>
      <%= f.date_field :end_date, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Book Now", class: "btn btn-create" %>
    </div>
  <% end %>
</div>
