<div class="navbar navbar-expand-sm navbar-light">
  <div class="container-fluid">
    <!-- Logo linking to the home page -->
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png", alt: "Mooved Logo", width: 40, height: 40, class: "navbar-logo" %>
    <% end %>

    <!-- Navbar toggle button for mobile view -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <!-- Links shown to signed-in users -->
          <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Bookings", bookings_path, class: "nav-link" %> <!-- Goes to bookings#index -->
          </li>

          <!-- Conditional "Trucks" & "Dashboard" link for companies -->
          <% if current_user.role == 'company' %>
            <li class="nav-item">
              <%= link_to "Trucks", trucks_path, class: "nav-link" %> <!-- Goes to trucks#index -->
            </li>
            <li class="nav-item">
              <%= link_to "Dashboard", dashboard_path, class: "nav-link" %> <!-- Goes to trucks#index -->
            </li>
          <% end %>
        <% else %>
          <!-- Links shown to non-signed-in users -->
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
      <% if user_signed_in? %>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "nav-link" %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
